# Cloudflare Configuration
# Copy this file to .env for local development (don't commit .env!)

# Your Cloudflare Account ID
CLOUDFLARE_ACCOUNT_ID=ad41fcfe1a84b27c62cc5cc9d590720e

# Your Cloudflare API Token (get from https://dash.cloudflare.com/profile/api-tokens)
# Required permissions: Edit Workers, Edit R2
CLOUDFLARE_API_TOKEN=your_api_token_here

# Optional: Environment specific settings
# NODE_ENV=development
# LOG_LEVEL=debug

# Optional: R2 Bucket Configuration
# R2_BUCKET_NAME=hotstack-bucket

# D1 Database Configuration
# Get your database ID after creating the database with: wrangler d1 create hotstack-db
DB_ID=b89c40c4-741a-42bf-aa2b-eb030b616b61

# Optional: Queue Configuration
# QUEUE_NAME=hotstack-queue

# Optional: Custom Domain
# CUSTOM_DOMAIN=hotstack.faa.zone

# GitHub Secrets Required:
# - CLOUDFLARE_API_TOKEN (add in GitHub repo settings)
# - CLOUDFLARE_ACCOUNT_ID (add in GitHub repo settings)
